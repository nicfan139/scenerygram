{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "NodeNext",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		/**
      The following flags are needed for the 'typeorm' library
    */
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
}
