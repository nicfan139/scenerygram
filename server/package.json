{
	"name": "scenerygram-server",
	"author": {
		"name": "Nicolas Fan",
		"email": "nicfan@gmail.com"
	},
	"scripts": {
		"dev": "nodemon ./src/server.ts",
		"db:sync": "npx typeorm-ts-node-commonjs schema:sync -d ./src/typeOrm.ts",
		"db:pending": "npx typeorm-ts-node-commonjs migration:show -d ./src/typeOrm.ts",
		"db:migrate": "npx typeorm-ts-node-commonjs migration:run -d ./src/typeOrm.ts",
		"db:drop": "npx typeorm-ts-node-commonjs schema:drop -d ./src/typeOrm.ts",
		"db:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/typeOrm.ts",
		"type-check": "tsc --noEmit",
		"format": "prettier --write .",
		"polish": "npm run type-check && npm run format",
		"build": "tsc --build",
		"clean": "tsc --build --clean",
		"start": "node ./dist/server.js"
	},
	"dependencies": {
		"@apollo/server": "^4.3.3",
		"@graphql-tools/schema": "^9.0.16",
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.13.0",
		"@types/ws": "^8.5.4",
		"bcrypt": "^5.1.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-jwt": "^8.4.1",
		"graphql": "^16.6.0",
		"graphql-subscriptions": "^2.0.0",
		"graphql-tag": "^2.12.6",
		"graphql-ws": "^5.11.3",
		"jsonwebtoken": "^9.0.0",
		"morgan": "^1.10.0",
		"pg": "^8.9.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.12",
		"ws": "^8.12.1"
	},
	"devDependencies": {
		"nodemon": "^2.0.20",
		"prettier": "^2.8.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	},
	"engines": {
		"node": "16.13.2"
	}
}
